{% extends "authed.twig" %}
{% import "inline.twig" as inline %}

{% block pageContent %}

    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-info">
                <button id="startTour" class="btn btn-xs btn-success pull-right">{{ "Start Tour"|trans }}</button>
                {{ "You can take a tour of the CMS and its Design capailities"|trans }}
            </div>
        </div>
    </div>

{% endblock %}

{% block javaScript %}
    <script type="text/javascript">
        $(document).ready(function() {
            $("#startTour").on("click", function() {
                restartTour(window.tour, true);
            });
        });
    </script>
{% endblock %}